<Window x:Class="LiveCounterScreensaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Counter Screensaver"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="Black"
        Topmost="True">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock FontSize="32" FontWeight="Bold">
                <Run Text="DOZENS ARE HELD " Foreground="LightBlue"/>
                <Run Text="HOSTAGE " Foreground="LightPink"/>
                <Run Text="BY HAMAS" Foreground="White"/>
            </TextBlock>

            <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
                <StackPanel Margin="5">
                    <TextBlock x:Name="DaysText" FontSize="56" Foreground="White" FontWeight="Bold" Text="000" />
                    <TextBlock FontSize="16" Foreground="Gray" Text="DAYS" />
                </StackPanel>
                <TextBlock FontSize="56" Foreground="White" FontWeight="Bold" Text=":" Margin="5,0" />

                <StackPanel Margin="5">
                    <TextBlock x:Name="HoursText" FontSize="56" Foreground="White" FontWeight="Bold" Text="00" />
                    <TextBlock FontSize="16" Foreground="Gray" Text="HOURS" />
                </StackPanel>
                <TextBlock FontSize="56" Foreground="White" FontWeight="Bold" Text=":" Margin="5,0" />

                <StackPanel Margin="5">
                    <TextBlock x:Name="MinutesText" FontSize="56" Foreground="White" FontWeight="Bold" Text="00" />
                    <TextBlock FontSize="16" Foreground="Gray" Text="MINUTES" />
                </StackPanel>
                <TextBlock FontSize="56" Foreground="White" FontWeight="Bold" Text=":" Margin="5,0" />

                <StackPanel Margin="5">
                    <TextBlock x:Name="SecondsText" FontSize="56" Foreground="White" FontWeight="Bold" Text="00" />
                    <TextBlock FontSize="16" Foreground="Gray" Text="SECONDS" />
                </StackPanel>
            </StackPanel>

            <TextBlock FontSize="28" FontWeight="Bold" HorizontalAlignment="Center">
                <Run Text="BRING THEM HOME " Foreground="White"/>
                <Run Text="NOW" Foreground="Red"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>